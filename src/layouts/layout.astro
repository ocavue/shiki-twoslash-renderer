---
import '../tailwind.css'
import '../style.css'
import { ThemeScript } from 'astro-theme-toggle'
import { ViewTransitions } from 'astro:transitions'
import { Toggle } from 'astro-theme-toggle'

interface Props {
  title?: string
  description?: string
}

const {
  title = 'Shiki Twoslash Renderer',
  description = 'Modern TypeScript code blocks with hover information and error diagnostics',
} = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <title>{title}</title>
    <style>
      /* Smooth scrolling for all elements */
      html {
        scroll-behavior: smooth;
      }
    </style>
    <ViewTransitions />
    <ThemeScript />
  </head>

  <body class="antialiased">
    <!-- Navigation -->
    <nav class="border-b border-black/10 dark:border-white/10">
      <div class="mx-auto max-w-2xl px-6 py-6">
        <div class="flex items-center justify-between">
          <a href="/" class="font-medium">Shiki Twoslash Renderer</a>
          <div class="flex items-center gap-3">
            <a
              href="https://github.com/ocavue/shiki-twoslash-renderer"
              class="text-black/60 hover:text-black dark:text-white/60 dark:hover:text-white transition-colors"
              target="_blank"
              rel="noopener"
              aria-label="GitHub repository"
            >
              <svg class="size-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
              </svg>
            </a>
            <div class="size-4 block text-black/60 hover:text-black dark:text-white/60 dark:hover:text-white transition-colors">
              <Toggle />
            </div>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main>
      <div class="prose dark:prose-invert mx-auto max-w-2xl px-6 py-10">
        <slot />
      </div>
    </main>

    <!-- Footer -->
    <footer class="border-t border-black/10 dark:border-white/10 mt-24">
      <div class="mx-auto max-w-2xl px-6 py-12">
        <p class="text-black/40 dark:text-white/40 text-sm">
          Built by <a
            href="https://github.com/ocavue"
            class="underline hover:text-black/60 dark:hover:text-white/60">ocavue</a
          >
        </p>
      </div>
    </footer>

    <script>
      // Register custom elements for Twoslash functionality
      import { register } from '../elements'
      register()
    </script>
  </body>
</html>
