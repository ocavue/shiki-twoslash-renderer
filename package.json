{
  "name": "shiki-twoslash-renderer",
  "type": "module",
  "version": "0.1.0",
  "private": false,
  "packageManager": "pnpm@10.15.1",
  "description": "A Shiki renderer for Twoslash based on web components",
  "author": {
    "name": "ocavue",
    "email": "ocavue@gmail.com"
  },
  "license": "MIT",
  "funding": "https://github.com/sponsors/ocavue",
  "homepage": "https://github.com/ocavue/shiki-twoslash-renderer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocavue/shiki-twoslash-renderer.git"
  },
  "bugs": "https://github.com/ocavue/shiki-twoslash-renderer/issues",
  "keywords": [
    "Shiki",
    "Twoslash",
    "TypeScript"
  ],
  "sideEffects": false,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./elements": "./src/elements.ts",
    "./style.css": "./src/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:tsdown && pnpm run build:astro",
    "build:tsdown": "tsc -b && tsdown",
    "build:astro": "astro build",
    "dev": "astro dev",
    "lint": "eslint .",
    "fix": "eslint --fix . && prettier --write .",
    "prepublishOnly": "pnpm run build",
    "test": "vitest",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@aria-ui/core": "^0.0.22",
    "@aria-ui/tooltip": "^0.0.30",
    "@shikijs/twoslash": "^3.12.2",
    "@shikijs/types": "^3.12.2",
    "@types/hast": "^3.0.4"
  },
  "devDependencies": {
    "@astrojs/mdx": "^4.3.4",
    "@ocavue/eslint-config": "^3.3.3",
    "@ocavue/tsconfig": "^0.5.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^20.19.13",
    "astro": "^5.13.5",
    "astro-theme-toggle": "^0.6.1",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "shiki": "^3.12.2",
    "tailwindcss": "^4.1.13",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "./elements": {
        "types": "./dist/elements.d.ts",
        "import": "./dist/elements.js",
        "default": "./dist/elements.js"
      },
      "./style.css": {
        "default": "./dist/style.css"
      }
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  }
}
